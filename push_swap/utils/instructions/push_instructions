#include "../../push_swap.h"

void	push_a(t_stack *stack_A, t_stack *stack_B, int print)
{
	stack_B->next = stack_A->next;
	stack_B->prev = stack_A->prev;
	stack_A->prev = stack_A->next;
	stack_A->next->next = stack_A->prev;
	if (print)
		write(1, "pa\n", 3);
}
void	push_a(t_stack *stack_A, t_stack *stack_B, int print)
{
	stack_B->next = stack_A->next;
	stack_B->prev = stack_A->prev;
	stack_A->prev = stack_A->next;
	stack_A->next->next = stack_A->prev;
	if (print)
		write(1, "pb\n", 3);
}
